<script>
let currentSection = 'page';
function showSection(sectionId) {
  if (currentSection === sectionId) return;
  const currentBtn = document.querySelector('.nav-btn.active');
  const newBtn = document.querySelector(`[onclick="showSection('${sectionId}')"]`);
  currentBtn.classList.remove('active');
  currentBtn.setAttribute('aria-selected', 'false');
  newBtn.classList.add('active');
  newBtn.setAttribute('aria-selected', 'true');
  // セクションの切り替え
  const currentEl = document.getElementById(currentSection);
  currentEl.classList.remove('show');
  setTimeout(() => {
    const newEl = document.getElementById(sectionId);
    newEl.classList.add('show');
    currentSection = sectionId;
  }, 150);
}
// キーボードナビゲーション
document.addEventListener('keydown', (e) => {
  if (e.key === 'ArrowLeft' || e.key === 'ArrowRight') {
    e.preventDefault();
    const sections = ['page', 'article'];
    const currentIndex = sections.indexOf(currentSection);
    const newIndex = e.key === 'ArrowLeft' 
      ? (currentIndex - 1 + sections.length) % sections.length
      : (currentIndex + 1) % sections.length;
    showSection(sections[newIndex]);
    document.querySelector(`[onclick="showSection('${sections[newIndex]}')"]`).focus();
  }
});
// リンクにフォーカスした時のスムーズスクロール
document.querySelectorAll('.link-item').forEach(link => {
  link.addEventListener('focus', (e) => {
    e.target.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  });
});
// ページ読み込み時の初期化
document.addEventListener('DOMContentLoaded', () => {
  const navButtons = document.querySelectorAll('.nav-btn');
  navButtons.forEach((btn, index) => {
    const sectionId = index === 0 ? 'page' : 'article';
    btn.setAttribute('id', `${sectionId}-tab`);
    btn.setAttribute('aria-controls', sectionId);
  });
});
</script>
